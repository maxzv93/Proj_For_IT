{% extends 'base.html.twig' %}

{% block title %}Список устройств{% endblock %}

{% block body %}

    <div class="ouritems">
        <h2>Наши товары</h2>
    </div>
    <div class="row">
            <div class="leftM" class="col-sm-6 col-xs-12 col-md-4 col-lg-3">
                {% block left_menu %}
                    <div class="find">
                        <h6><b>Поиск</b></h6>
                    </div>
                    {{ form(form) }}
                {% endblock %}
            </div>

            {% for device in devices %}
                {% if device.isDelete == false %}
{#                    <div class="col-sm-3">#}
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card" style="width: 16rem;">
                            <img src="{{ device.RefPicture }}" class="card-img-top" alt="">
                            <div class="card-body">
                                <h1></h1>
                                <h5 class="card-title"> {{ device.Phone }}</h5>
                                <p class="card-text">Цена: {{ device.Price }}</p>
                                <a href="{{ path('device_show',{'device' :device.id}) }}" class="btn btn-primary">Подробнее </a><br>
                                {% if is_granted('ROLE_ADMIN_USER') %}
                                    <a href="{{ path('device_edit',{'id' :device.id}) }}" class="card-link">Редактировать</a>
                                {% endif %}
                                <a href="{{ path('device_set_favourite',{'id' :device.id}) }}" class="card-link">Добавить в корзину</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
   
    </div>
{% endblock %}
